/* pages/quoteHistory/historyList/historyList.wxss */
/* 包裹容器 */
.wrapper {
  position: relative;
  width: 100%;
  height: 100vh;
}

/* 过滤器 */
.filter {
  border-bottom: 2rpx solid #d0d0d0;
  z-index: 1000;
}

/* 记录列表群组 */
.list__group {
  position: relative;
  margin-bottom: 100rpx;
}

/* 底部空白区域 */
.list__group::after {
  height: 100rpx;
  content: '';
  display: block;
}

/* 记录列表项 */
.list__item {
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 35rpx;
  width: 100%;
  height: 130rpx;
  display: flex;
}

/* 记录列表图标 */
.list__icon {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
  background-color: lightblue;
}

.list__icon image {
  width: 90rpx;
  height: 90rpx;
}

/* 记录列表标题 */
.list__title {
  position: relative;
  box-sizing: border-box;
  margin-left: 20rpx;
  padding-right: 20rpx;
  min-width: 300rpx;
  height: 110rpx;
  border-bottom: 2rpx solid #d0d0d0;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.list__title .list__title-text {
  line-height: 60rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list__title .list__title-time {
  line-height: 30rpx;
  font-size: 24rpx;
  color: #d0d0d0;
}

/* 记录金额 */
.list__amount {
  position: relative;
  box-sizing: border-box;
  min-width: 180rpx;
  height: 110rpx;
  line-height: 60rpx;
  text-align: right;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom: 2rpx solid #d0d0d0;
}