/* pages/quoteHistory/historyDetail/historyDetail.wxss */
/* 外层包裹容器 */
.wrapper {
  position: relative;
  box-sizing: border-box;
  padding: 0 40rpx;
  width: 100%;
  height: 100vh;
}

/* 头部信息 */
.header {
  position: relative;
  width: 100%;
  min-height: 350rpx;
  border-bottom: 2rpx solid #f9f9f9;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

/* 头部图标 */
.header__icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.header__icon image {
  width: 100rpx;
  height: 100rpx;
}

/* 头部信息 */
.header__text,
.header__annotation {
  width: 100%;
  text-align: center;
}

/* 头部备注 */
.header__annotation {
  color: #428EF0;
  font-style: italic;
}

/* 头部金额 */
.header__amount {
  font-size: 50rpx;
  font-weight: bold;
}

/* 订单选项信息、订单参数 */
.paper__info, .paper__params {
  position: relative;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f9f9f9;
}

/* 订单选项 */
.paper__options {
  width: 100%;
  height: 70rpx;
  display: flex;
  /* background-color: rebeccapurple; */
}

/* 订单选项标题 */
.paper__option-title {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #9b9b9b;
}

/* 订单选项内容 */
.paper__option-content {
  width: 400rpx;
  height: 70rpx;
  flex-grow: 1;
  line-height: 70rpx;
}

/* 订单删除按钮 */
.delete__button {
  margin: 40rpx;
  display: flex;
  justify-content: center;
}