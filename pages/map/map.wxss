/* pages/map/map.wxss */
.map__input {
  width: 100%;
  height: 120rpx;
}

.map__input input {
  margin: 10rpx auto;
  padding: 0 20rpx;
  width: 90%;
  height: 80rpx;
  border: 2rpx solid #c3c3c3;
  border-radius: 6rpx;
}

.map__tips {
  position: fixed;
  top: 120rpx;
  width: 100%;
  background-color: #ffffff;
  z-index: 1000;
}

.map__tips-items {
  margin: 20rpx 50rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #c3c3c3;
}

.map__box{
  position: absolute;
  top: 140rpx;
  right: 0;
  bottom: 180rpx;
  left: 0;
}

#navi_map{
  width: 100%;
  height: 100%;
}

.map__control{
  position: absolute;
  width: 100%;
  height: 60rpx;
  bottom: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.map__control .text{
  /* margin: 30rpx; */
  line-height: 60rpx;
  text-align: center;
}

.map__buttons {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
}
