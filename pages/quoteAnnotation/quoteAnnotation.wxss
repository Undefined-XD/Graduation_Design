/* pages/quoteAnnotation/quoteAnnotation.wxss */
/* 外层包裹容器 */
.wrapper {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 备注标题 */
.annotation__title {
  position: relative;
  box-sizing: border-box;
  padding: 80rpx 0;
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}

/* 备注文本区域 */
.annotation__textarea {
  position: relative;
  width: 100%;
  height: 250rpx;
}

/* 备注内容 */
.annotation__content {
  position: relative;
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 250rpx;
  background-color: #ffffff;
}

/* 备注内容字数 */
.annotation__text-length {
  position: relative;
  padding-right: 40rpx;
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 24rpx;
}

/* 按钮组 */
.annotation__buttons {
  position: relative;
  margin-top: 100rpx;
  display: flex;
  justify-content: space-evenly;
}