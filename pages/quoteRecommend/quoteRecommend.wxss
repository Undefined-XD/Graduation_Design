/* pages/quoteRecommend/quoteRecommend.wxss */
.wrapper {
  position: relative;
  /* box-sizing: border-box; */
  padding: 30rpx 0 100rpx;
  width: 100%;
  min-height: 100vh;
  background-color: #f7f8fa;
}

.van-field-group {
  margin: 0 30rpx 30rpx;
  display: block;
}

.total-price-bar {
  position: fixed;
  bottom: 0;
  padding-right: 40rpx;
  width: 100%;
  height: 140rpx;
  text-align: right;
  line-height: 100rpx;
  background-color: #ffffff;
  z-index: 1000;
  box-sizing: border-box;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0000FF;
}